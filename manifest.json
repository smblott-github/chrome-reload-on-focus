{
  "manifest_version": 2,
  "name": "Chrome Reload on Focus",
  "version": "1.64.3",
  "description": "Reload a tab whenever it receives the focus.",
  "minimum_chrome_version": "51.0",
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["rof-content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": false
    }
  ],
  "options_ui": {
    "page": "rof-options.html",
    "chrome_style": false,
    "open_in_tab": true
  }
}
